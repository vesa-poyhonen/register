<% provide(:title, "Login") %>
<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>

    <p class="mt-3">Not yet registered? <%= link_to "Register here", register_path %>.</p>
    <p class="mt-3"><%= link_to "Forgot your password?", new_password_reset_path %></p>
  </div>
</div>